<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="416dp"
        android:layout_height="235dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:src="@drawable/change" />
    <TextView
        android:id="@+id/textchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHANGE PASSWORD"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:textColor="@color/purple_500"
        android:textStyle="bold">

    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="#999"
        android:layout_marginTop="10dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your current password"
            android:background="@drawable/edittext"
            android:id="@+id/edPassOld"
            android:inputType="textPassword"
            android:maxLines="1"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="#999"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your New password"
            android:id="@+id/edPassNew"
            android:inputType="textPassword"
            android:maxLines="1"
            android:background="@drawable/edittext"

            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="#999"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:id="@+id/edRePassNew"
            android:inputType="textPassword"
            android:maxLines="1"
            android:background="@drawable/edittext"
            />
    </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="CHANGE PASSWORD"
            android:textStyle="bold"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btDontSave"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            android:text="CANCEL"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/red"

            />
</LinearLayout>